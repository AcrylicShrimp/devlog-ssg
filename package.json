{
	"name": "devlog-ssg",
	"version": "1.0.0",
	"description": "My blog site generator.",
	"main": "./src/build.js",
	"scripts": {
		"postinstall": "patch-package",
		"start": "npm run dev",
		"build": "node ./src/cleanPublic.js && npm run build:post && npm run build:rollup && npm run build:html && npm run build:html-min && npm run build:opt",
		"build-dev": "node ./src/cleanPublic.js && npm run build:post && npm run build:rollup && npm run build:html",
		"build:post": "git submodule update --remote --merge",
		"build:rollup": "rollup -c",
		"build:html": "node ./src/build.js",
		"build:html-min": "html-minifier-terser --case-sensitive --collapse-boolean-attributes --collapse-inline-tag-whitespace --collapse-whitespace --decode-entities --keep-closing-slash --no-newlines-before-tag-close --remove-attribute-quotes --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes --remove-tag-whitespace --sort-attributes --sort-class-name --use-short-doctype --input-dir ./dist --output-dir ./dist --file-ext html",
		"build:opt": "subfont --root ./dist --canonical-root https://blog.ashrimp.dev/ --output ./dist-opt --inline-css --no-fallbacks",
		"dev": "rollup -c -w --no-watch.clearScreen",
		"dev2": "http-server ./dist",
		"watch:tailwind": "postcss src/styles/tailwind.css -o dist/style.css -w",
		"serve": "node ./src/cleanPublic.js && npm run build:rollup && NODE_ENV=production node ./src/server.js",
		"esbuild": "node esbuild",
		"eslint": "eslint --ext .js .",
		"eslint:fix": "eslint --fix --ext .js .",
		"prettier:svelte": "prettier --write --plugin-search-dir=. ./**/*.svelte"
	},
	"type": "commonjs",
	"engines": {
		"node": ">= 12.0.0"
	},
	"dependencies": {
		"@elderjs/elderjs": "^1.7.1",
		"@elderjs/plugin-browser-reload": "^1.3.10",
		"@elderjs/plugin-seo-check": "^1.3.10",
		"@elderjs/plugin-sitemap": "^1.3.10",
		"@fortawesome/fontawesome-free": "^6.1.1",
		"body-parser": "^1.20.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"del": "^6.0.0",
		"dotenv": "^16.0.1",
		"fs-extra": "^10.1.0",
		"glob": "^8.0.3",
		"intersection-observer": "^0.12.0",
		"polka": "^0.5.2",
		"sirv": "^2.0.2",
		"svelte": "^3.48.0",
		"svelte-preprocess": "^4.10.6"
	},
	"devDependencies": {
		"@babel/core": "^7.17.10",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.17.10",
		"@babel/preset-env": "^7.17.10",
		"@babel/runtime": "^7.17.9",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.15.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"html-minifier-terser": "^7.0.0-alpha.2",
		"http-server": "^14.1.0",
		"nodemon": "^2.0.16",
		"patch-package": "^6.4.7",
		"postcss": "^8.4.13",
		"postcss-import": "^14.1.0",
		"postcss-load-config": "^3.1.4",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"rollup": "^2.73.0",
		"rollup-plugin-inline-svg": "^3.0.3",
		"rollup-plugin-postcss": "^4.0.2",
		"subfont": "^6.4.2",
		"tailwindcss": "^3.0.24"
	},
	"author": "AcrylicShrimp",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AcrylicShrimp/devlog-ssg.git"
	},
	"bugs": {
		"url": "https://github.com/AcrylicShrimp/devlog-ssg/issues"
	},
	"homepage": "https://github.com/AcrylicShrimp/devlog-ssg#readme"
}
