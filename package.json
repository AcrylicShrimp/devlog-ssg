{
	"name": "devlog-ssg",
	"version": "1.0.0",
	"description": "My blog site generator.",
	"main": "./src/build.js",
	"scripts": {
		"postinstall": "patch-package",
		"start": "npm run dev",
		"build": "node ./src/cleanPublic.js && npm run build:post && npm run build:rollup && npm run build:html && npm run build:opt",
		"build-dev": "node ./src/cleanPublic.js && npm run build:post && npm run build:rollup && npm run build:html",
		"build:post": "git submodule update --remote --merge",
		"build:rollup": "rollup -c",
		"build:html": "node ./src/build.js",
		"build:opt": "subfont --root ./dist --canonical-root https://blog.ashrimp.dev/ --output ./dist-opt --inline-css --no-fallbacks",
		"dev": "rollup -c -w --no-watch.clearScreen",
		"dev2": "http-server ./dist",
		"watch:tailwind": "postcss src/styles/tailwind.css -o dist/style.css -w",
		"serve": "node ./src/cleanPublic.js && npm run build:rollup && NODE_ENV=production node ./src/server.js",
		"esbuild": "node esbuild",
		"eslint": "eslint --ext .js .",
		"eslint:fix": "eslint --fix --ext .js .",
		"prettier:svelte": "prettier --write --plugin-search-dir=. ./**/*.svelte"
	},
	"type": "commonjs",
	"engines": {
		"node": ">= 12.0.0"
	},
	"dependencies": {
		"@elderjs/elderjs": "^1.6.3",
		"@elderjs/plugin-browser-reload": "^1.3.2",
		"@elderjs/plugin-seo-check": "^1.3.2",
		"@elderjs/plugin-sitemap": "^1.3.4",
		"@fortawesome/fontawesome-free": "^5.15.4",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"del": "^6.0.0",
		"dotenv": "^8.2.0",
		"fs-extra": "^9.1.0",
		"glob": "^7.1.6",
		"intersection-observer": "^0.12.0",
		"polka": "^0.5.2",
		"sirv": "^1.0.11",
		"svelte": "^3.38.3",
		"svelte-preprocess": "^4.6.9"
	},
	"devDependencies": {
		"@babel/core": "^7.13.10",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.13.10",
		"@babel/preset-env": "^7.13.10",
		"@babel/runtime": "^7.13.10",
		"autoprefixer": "^10.2.5",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-svelte3": "^3.2.1",
		"html-minifier-terser": "^7.0.0-alpha.0",
		"http-server": "^14.1.0",
		"nodemon": "^2.0.7",
		"patch-package": "^6.4.7",
		"postcss": "^8.2.8",
		"postcss-import": "^14.0.2",
		"postcss-load-config": "^3.1.0",
		"prettier": "^2.5.0",
		"prettier-plugin-svelte": "^2.2.0",
		"rollup": "^2.41.1",
		"rollup-plugin-inline-svg": "^2.0.0",
		"rollup-plugin-postcss": "^4.0.2",
		"subfont": "^6.4.0",
		"tailwindcss": "^2.2.19"
	},
	"author": "AcrylicShrimp",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AcrylicShrimp/devlog-ssg.git"
	},
	"bugs": {
		"url": "https://github.com/AcrylicShrimp/devlog-ssg/issues"
	},
	"homepage": "https://github.com/AcrylicShrimp/devlog-ssg#readme"
}
